# Default server configuration
#

# PUT THIS IN /etc/nginx/sites-available and /etc/nginx/sites-enabled

server {

	listen 80;
        listen [::]:80;
	server_name check-in-bot.ruthgracewong.com www.check-in-bot.ruthgracewong.com;

        location ~ /.well-known {
            root /var/www/check-in-bot;
        }
}
